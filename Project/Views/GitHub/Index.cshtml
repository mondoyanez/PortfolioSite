@{
    ViewData["Title"] = "GitHub Viewer";
}

<div class="flex items-end justify-end mb-10">
    <a href="https://github.com/mondoyanez/WesternOregonProjects/tree/main/GitHubReposTable/HW3/HW3">
        <button class="mx-5 bg-blue-100 dark:bg-blue-900 text-sm font-serif font-bold text-blue-800 dark:text-blue-200 rounded-md p-1.5 hover:bg-yellow-200 dark:hover:bg-yellow-800" type="button">Original Repo</button>
    </a>
</div>

<div id="github-user-content" class="flex justify-center sm:pb-[50px] pb-5 m-3">
    <div>
        <img src="" id="github-user-image" class="sm:w-[216px] sm:h-[216px] w-[150px] h-[150px]" alt="GitHub Avatar"/>
    </div>
    <div id="github-user-info" class="bg-teal-300 dark:bg-teal-600 xl:w-[900px] w-[300px]">
        <h1 id="name-header" class="text-yellow-800 dark:text-yellow-300 font-medium text-3xl sm:mx-3 mx-[3px]"></h1>
        <p id="github-username" class="text-blue-800 dark:text-blue-200 sm:m-3 m-[3px]"></p>
        <p id="github-email" class="text-blue-800 dark:text-blue-200 sm:m-3 m-[3px]"></p>
        <p id="github-company" class="text-blue-800 dark:text-blue-200 sm:m-3 m-[3px]"></p>
        <p id="github-location" class="text-blue-800 dark:text-blue-200 sm:m-3 m-[3px]"></p>
    </div>
</div>

<div class="xl:flex block sm:ml-[62px] md:ml-[125px] lg:ml-[252px] xl:ml-20 2xl:ml-[210px] 3xl:ml-[400px] mx-3">
    <div>
        <h2 class="font-medium text-2xl text-blue-800 dark:text-blue-200 my-2">Repositories</h2>
        <table id="repository-names" style="display: none;"></table>
    </div>
    <div>
        <div class="3xl:ml-[208px] 2xl:ml-[208px] xl:ml-[150px] 2xl:mt-3 2xl:w-[596px] xl:w-[654px] lg:w-[712px] mt-10 mb-24 bg-green-400 dark:bg-green-800 text-blue-800 dark:text-blue-200 pb-10" id="repository-container" style="display: none;">
            <div id="repository-info">
                <h4 class="sm:text-2xl text-lg font-bold text-blue-800 dark:text-blue-200 pb-24 pl-1.5" style="display: none;" id="repository-header-name"></h4>
                <img class="sm:w-[216px] sm:h-[216px] w-[150px] h-[150px] 2xl:ml-[380px] xl:ml-[438px] lg:ml-[496px] md:ml-[415px] sm:ml-[350px] ml-[276px] mt-[-90px]" src="" id="github-repo-image" alt="Repo Image" style="display: none;"/>
            </div>
        </div>
    </div>
</div>
<div class="3xl:ml-[922px] 2xl:ml-[732px] xl:ml-[544px] lg:ml-[252px] md:ml-[125px] sm:ml-[62px] mt-[-75px] mx-3">
    <h2 class="mb-10 font-bold text-2xl text-blue-800 dark:text-blue-200" style="display: none;" id="commits-header">Commits</h2>
    <table class="text-sm text-left rtl:text-right text-blue-800 dark:text-blue-200 w-1/12" id="commits-info" style="display: none;">
        <thead class="lg:text-base text-xs font-bold uppercase bg-gray-50 dark:bg-gray-700">
            <tr>
                <th scope="col" class="md:px-6 px-1 py-3">
                    SHA
                </th>
                <th scope="col" class="md:px-6 px-2 py-3">
                    Timestamp
                </th>
                <th scope="col" class="md:px-6 px-2 py-3">
                    Committer
                </th>
                <th scope="col" class="md:px-6 px-2 py-3">
                    Commit Message
                </th>
            </tr>
        </thead>
        <tbody>
            <tr class="odd:bg-white odd:dark:bg-gray-900 even:bg-gray-50 even:dark:bg-gray-800 border-b dark:border-gray-700 hover:bg-gray-300 dark:hover:bg-gray-600">
                <td class="md:px-6 px-1 py-4 lg:text-base text-xs">
                    <a href="#" class="font-medium text-blue-600 dark:text-blue-300 hover:underline">Link</a>
                </td>
            </tr>
        </tbody>
    </table>
</div>

@section Scripts
{
    <script type="text/javascript" src="~/js/githubApi.js"></script>
}