<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Portfolio.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/styles.css" asp-append-version="true" />
</head>
<body class="bg-slate-100 dark:bg-slate-900">

  <nav class="bg-blue-100 dark:bg-blue-900">
    <div class="flex flex-wrap p-4">
      <a asp-controller="Home" asp-action="Index">
          <span class="text-2xl font-semibold whitespace-nowrap text-blue-800 md:hover:text-orange-500 dark:text-blue-200">AY</span>
      </a>
      <div class="md:block ml-10 mt-1" id="navbar-solid-bg">
        <ul class="flex md:space-x-8">
          <li>
            <a asp-controller="Home" asp-action="Index" class="font-semibold py-2 pl-3 pr-4 text-blue-800 rounded md:bg-transparent md:p-0 md:hover:text-orange-500 dark:text-blue-200">Projects</a>
          </li>
          <li>
            <a href="#" class="font-semibold py-2 pl-3 pr-4 text-blue-800 hover:bg-gray-100 md:hover:bg-transparent md:border-0 md:p-0 md:hover:text-orange-500 dark:text-blue-200">Resume</a>
          </li>
          <li>
            <a href="#" class="font-semibold py-2 pl-3 pr-4 text-blue-800 rounded hover:bg-gray-100 md:hover:bg-transparent md:border-0 md:p-0 md:hover:text-orange-500 dark:text-blue-200">Contact</a>
          </li>
        </ul>
      </div>
      <button id="theme-toggle" type="button" class="absolute right-0 text-gray-500 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-700 focus:outline-none focus:ring-4 focus:ring-gray-200 dark:focus:ring-gray-700 rounded-lg text-sm p-1.5">
        <svg id="theme-toggle-dark-icon" class="hidden w-5 h-5" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z"></path></svg>
        <svg id="theme-toggle-light-icon" class="hidden w-5 h-5" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path d="M10 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zm4 8a4 4 0 11-8 0 4 4 0 018 0zm-.464 4.95l.707.707a1 1 0 001.414-1.414l-.707-.707a1 1 0 00-1.414 1.414zm2.12-10.607a1 1 0 010 1.414l-.706.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM17 11a1 1 0 100-2h-1a1 1 0 100 2h1zm-7 4a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zM5.05 6.464A1 1 0 106.465 5.05l-.708-.707a1 1 0 00-1.414 1.414l.707.707zm1.414 8.486l-.707.707a1 1 0 01-1.414-1.414l.707-.707a1 1 0 011.414 1.414zM4 11a1 1 0 100-2H3a1 1 0 000 2h1z" fill-rule="evenodd" clip-rule="evenodd"></path></svg>
      </button>
    </div>
  </nav>
 
    @RenderBody()

    <footer class="footer bg-blue-100 dark:bg-blue-900">
      <div class="flex py-5 justify-between">
        <div class="flex w-full md:w-1/2 px-8 text-blue-800 dark:text-blue-200">
          &copy; 2023 - Portfolio - Armando Yanez Zitelli
        </div>

        <div class="flex mr-5 mt-1">
          <a href="https://github.com/mondoyanez/PortfolioSite" target="_blank">
            <svg xmlns="http://www.w3.org/2000/svg" width="50" height="50" fill="currentColor" viewBox="0 0 16 16">
                <path d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"/>
            </svg>
        </a>
        </div>
      </div>
    </footer>
    
    <script src="/Project/wwwroot/lib/images/github.svg"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
